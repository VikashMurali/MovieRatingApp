<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#FFF"
    android:layout_margin="10dp"
    android:layout_height="match_parent"
    tools:context=".fragments.DescriptionFragment">


    <ImageView
        android:id="@+id/largeimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:padding="3dp" />
    <TextView
        android:id="@+id/description_name"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_dark_background" />
    <TextView
        android:id="@+id/description_season"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_dark_background" />
    <TextView
        android:id="@+id/description_episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/cardview_dark_background" />
    <TextView
        android:id="@+id/description_runtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/cardview_dark_background" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="Description : "
        android:paddingLeft="5dp"
        android:textColor="@android:color/primary_text_light" />
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:textColor="#E4424242" />

</LinearLayout>
</layout>